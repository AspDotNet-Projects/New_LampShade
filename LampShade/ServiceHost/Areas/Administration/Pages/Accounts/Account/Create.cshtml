@page
@model ServiceHost.Areas.Administration.Pages.Accounts.Account.CreateModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "ایجاد کاربر جدید";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">ایجاد کاربر جدید</h3>
            </div>
            <div class="panel-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Command.Fullname" class="control-label">نام</label>
                                <input type="text" class="form-control" asp-for="Command.Fullname" onchange="makeSlug('Title', 'Slug')">
                                <span asp-validation-for="Command.Fullname" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Command.Username" class="control-label">نام کاربری</label>
                                <input type="text" class="form-control" asp-for="Command.Username">
                                <span asp-validation-for="Command.Username" class="error"></span>
                            </div>
                        </div>
                        
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.Mobile" class="control-label">موبایل</label>
                                <input type="text" class="form-control" asp-for="Command.Mobile">
                                <span asp-validation-for="Command.Mobile" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.Password" class="control-label">کلمه رمز</label>
                                <input type="text" class="form-control" asp-for="Command.Password">
                                <span asp-validation-for="Command.Password" class="error"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.ProfilePhoto" class="control-label">عکس</label>
                                    <input type="file" class="form-control" asp-for="Command.ProfilePhoto" accept="image/*">
                                    <span asp-validation-for="Command.ProfilePhoto" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Command.RoleId">نقش</label>
                                <select class="form-control" asp-for="Command.RoleId" asp-items="Model.Roles">
                                    <option value="0">نقش</option>
                                </select>
                                <span asp-validation-for="Command.RoleId" class="error"></span>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success waves-effect waves-light m-b-5">ایجاد</button>
                    <a asp-page="./Index" class="btn btn-dark waves-effect waves-light m-b-5">بازگشت</a>
                </form>
            </div>
        </div>
    </div>
</div>
